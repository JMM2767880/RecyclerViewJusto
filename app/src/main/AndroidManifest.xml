<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recyclerviewjusto">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".BorrarPokemon" android:parentActivityName=".MainActivity" android:label="Borrar Pokémon"></activity>
        <activity android:name=".AddPokemon" android:parentActivityName=".MainActivity" android:label="Añadir Pokémon"/>
        <activity android:name=".BuscarPokemon" android:parentActivityName=".MainActivity" android:label="Buscar Pokémon"/>
        <activity android:name=".ListaPokemon" android:parentActivityName=".MainActivity" android:label="Pokémon"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>